{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended", 
        "prettier/@typescript-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["webpack.config.js"],
    "rules": {
    },
    "settings": {
        "import/parsers": { 
            "@typescript-eslint/parser": [".ts", ".tsx"] 
        }, 
        "import/resolver": { 
            "typescript": "./tsconfig.json" 
        }
    }
}
